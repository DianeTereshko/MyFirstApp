@using Blog.Areas.Admin.ViewComponents
@using Blog.Areas.Main.ViewComponents
@model PagedResult<Comment>
@{
    ViewData["Title"] = "Comments";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="w3-container w3-padding">
    <h4>Менеджмент комментариями</h4>
    <div class="w3-responsive">
        <table class="w3-table-all w3-table w3-bordered">
            <tr>
                <th>id</th>
                <th>Дата</th>
                <th>Комментарий</th>
                <th>Имя пользователя</th>
                <th>E-mail</th>
                <th>Id статьи</th>
                <th>Заголовок статьи</th>
            </tr>
            @foreach (var comment in Model.Results)
            {

                <tr>
                    <td>@comment.Id</td>
                    <td>@comment.Date</td>
                    <td>@comment.Message</td>
                    <td>@comment.UserName</td>
                    <td>@comment.UserEmail</td>
                    <td>@comment.ArticleDeatil.Id</td>
                    <td>@comment.ArticleDeatil.Name</td>
                </tr>
            }
        </table>
    </div>
</div>

<div>
    <div>
        @{ var i = 1; }
        @foreach (var item in Model.Results)
        {
            var rowNo = (Model.CurrentPage - 1) * Model.PageSize + i;
            i++;
        }

        @(await Component.InvokeAsync<CommentPager>(Model))
    </div>
</div>