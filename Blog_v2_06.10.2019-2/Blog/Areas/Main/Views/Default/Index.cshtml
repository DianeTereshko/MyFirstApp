@using Blog.Areas.Main.ViewComponents
@model Blog.Services.Models.PagedResult<Blog.Services.Models.Article>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Main/Views/Shared/_Layout.cshtml";
}
<!-- Article PC start -->
<div class="w3-hide-small">
@{
    var i = 1;
}
@*<hr>*@
@foreach (var item in Model.Results)
{
    var rowNo = (Model.CurrentPage - 1) * Model.PageSize + i;
    i++;

    <!--Article 1 Start-->
    <div class="w3-small">
        <span class="w3-right">
            @if (item.Raiting == 1)
            {
                <i class="far fa-star"></i>

            }
            @if (item.Raiting == 2)
            {
                <i class="far fa-star"></i>
                <i class="far fa-star"></i>
            }
            @if (item.Raiting == 3)
            {
                <i class="far fa-star"></i>
                <i class="far fa-star"></i>
                <i class="far fa-star"></i>
            }
            @if (item.Raiting == 4)
            {
                <i class="far fa-star"></i>
                <i class="far fa-star"></i>
                <i class="far fa-star"></i>
                <i class="far fa-star"></i>
            }
            @if (item.Raiting == 5)
            {
                <i class="far fa-star"></i>
                <i class="far fa-star"></i>
                <i class="far fa-star"></i>
                <i class="far fa-star"></i>
                <i class="far fa-star"></i>
            }
        </span>
        <p class="w3-xlarge">@item.Name</p>
    </div>
    <span class="w3-small">
        <span><i class="far fa-clock"></i>@item.Date</span>
        <span><i class="far fa-comments"></i>@item.ArticleDetail.Comment.Count</span>
        <span><i class="fab fa fa-thumbs-up"></i>@item.ArticleDetail.Like</span>
        <span><i class="fab fa fa-thumbs-down"></i>@item.ArticleDetail.Unlike</span>
    </span>
    <div>
        <img src="@Url.Content(item.ImageLink)" alt="image not found" class="w3-left w3-ext-img-size w3-padding">
        <p>@item.Description</p>
    </div>
    <a asp-area="Main" asp-controller="Default" asp-action="Article" asp-route-id="@item.ArticleDetail.Id" class="w3-button w3-block w3-ext-animate-button">Читать полностью</a>
    <hr />

}
</div>
<!--End Article PC -->
