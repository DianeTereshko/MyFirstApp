@model Blog.Services.Models.PagedResultBase
@{

    var startIndex = Math.Max(Model.CurrentPage - 5, 1);
    var finishIndex = Math.Min(Model.CurrentPage + 5, Model.PageCount);
}

<!--Paginator Start-->
@if (Model.PageCount > 1)
{
    int prev = 1;
    int next = 1;
    @for (var i = startIndex; i <= finishIndex; i++)
    {
        if (i == Model.CurrentPage)
        {

            prev = Model.CurrentPage - 1;
            if (prev == 0)
            {
                prev = 1;
            }
            next = Model.CurrentPage + 1;
        }

    }

    <div class="w3-padding w3-center">
        <div class="w3-bar w3-small">
            <!--Предыдущая-->
            <a asp-area="Main" asp-controller="Default" asp-action="Category" asp-route-paging="@prev.ToString()" id="previous" class="w3-bar-item w3-button w3-ext-animate-button">&#10094; Предыдущая</a>
            @for (var i = startIndex; i <= finishIndex; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <span class="w3-bar-item w3-button  w3-border w3-ext-animate-button">@i</span>
                }
                else
                {
                    <!--Все кроме текущей-->
                    <a asp-area="Main" asp-controller="Default" asp-action="Category" asp-route-paging="@i.ToString()" class="w3-bar-item w3-button w3-ext-animate-button">@i</a>
                }
            }
           <!--Следующая-->
            <a asp-area="Main" asp-controller="Default" asp-action="Category" asp-route-paging="@next.ToString()" id="next" class="w3-bar-item w3-button w3-ext-animate-button">Следующая &#10095;</a>
        </div>
    </div>
}
<!--Paginator End-->