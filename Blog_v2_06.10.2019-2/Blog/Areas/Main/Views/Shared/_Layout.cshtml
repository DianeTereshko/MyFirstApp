<!DOCTYPE html>
<html>
<head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-148960560-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-148960560-1');
    </script>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Home Page</title>
    <environment include="Development">
        <link href="~/assets/css/w3pro.css" rel="stylesheet" asp-append-version="true"/>
        <link href="~/assets/css/site.css" rel="stylesheet" asp-append-version="true"/>
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro&display=swap" rel="stylesheet">
        <link href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" rel="stylesheet" asp-append-version="true">
        <link rel="icon" type="image/png" href="~/assets/files/barley_80px.png" sizes="64x64">
    </environment>
</head>
<body>
    @*Header Start*@
    @await Component.InvokeAsync("MenuHeader")
    @*Header End*@
    @*Jumbotron Start*@
    @await Component.InvokeAsync("Jumbotron")
    @*Jumbotron End*@
    @*Row Left Menu and Body Start*@
    <section class="w3-row-padding">
        <div class="w3-col m3 w3-hide-small">
            @await Component.InvokeAsync("MenuLeft")
        </div>
        <div class="w3-col m9">
            @RenderBody()
        </div>
    </section>
    @*Row Left Menu and Body End*@
    @*Footer Start*@
    @await Component.InvokeAsync("Footer")
    @*Footer End*@
    <environment include="Development">
        <script src="~/assets/npm/jquery.js" asp-append-version="true"></script>
        <script src="~/assets/compiled/navigation.js" asp-append-version="true"></script>
        <script src="~/assets/compiled/search.js" asp-append-version="true"></script>
        <script src="~/assets/compiled/tabbs.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>

